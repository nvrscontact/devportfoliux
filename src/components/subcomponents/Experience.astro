---
interface Props{
    company?: string
    others?: string
    dates?: string
    workstation?: string
    paragraph?: string
    paragraph_two?: string
    country?: string
    language_one?: string
    language_two?: string
    language_three?: string
    improvements?: string
    }
    const {company,dates,workstation,paragraph,paragraph_two,country, language_one,language_two,language_three } = Astro.props
---
       
<section class="border border-white/30 rounded-xl" >

        <div class="bg-white/10 m-1 p-3 rounded-md">
            
            <section class="pb-[10px]">
                <div class="flex gap-2">
                    <section class="flex flex-col">
                        
                        <div class="flex items-center gap-2">
                            <h1 class="text-[16px] text-white/80 inter-300">{company}</h1>
                            <img src={country} alt="" class="h-[16px] opacity-[0.8] ">
                            <span class="dark:text-black text-[13px] text-[#C7C7C7] bg-black/40 rounded-md py-1 px-2"> {dates} </span>  
                        </div>
                        
                        <div class="flex items-center gap-1">
                            <span class="text-[14px] h-fit w-fit text-[#7a7a7a] inter-300"> {workstation} </span>
                        </div>
                        
                    </section>
                </div>
            </section>
        

            <section class="dark:text-black text-[#cfcfcf] text-[12px] ">
                <p class="bg-[rgba(170,170,170,0.4)]">
                    <p class="pb-2 text-white/70 inter-200">
                        {paragraph}
                    </p>
                    <p class="text-white/70 inter-200">
                        {paragraph_two}
                    </p>
                </p>
                <section class="flex items-center justify-between pt-3 gap-2">
                    <span class="flex justify-end gap-2">
                        <img src={language_one} alt="" class="h-5">
                        <img src={language_two} alt="" class="h-5">
                        <img src={language_three} alt="" class="h-5">
                    </span>
                </section>
            </section>
        
        </div>        
</section>
    