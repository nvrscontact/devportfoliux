---
interface Props{
    title?: string
    paragraph?: string
    width?: string
    height?: string
    ground_img?: string
    ground_height?: string 
    icon_span_one?: string
    icon_span_two?: string
    icon_span_three?: string
    link?: string
    link_img?: string
    shadow?: string

 
}
const {title,paragraph,width='w-[190px]',height='h-[265px]', ground_img,ground_height,icon_span_one,icon_span_two,icon_span_three,link,link_img,shadow}  = Astro.props
---

<section class=` flex flex-col border border-white/30 rounded-xl max-w-48 ${width} ${height} shrink-0`>

    <section class="rounded-t-xl">
        <section class=" flex flex-col text-center border-b border-white/30 h-24 p-2 flew-wrap">
            <section class="flex flex-col justify-center items-center inter-200">
                <a href={link} class="animated_white_basic text-[18px] tracking-[-1.5px] pr-[1px] inter-500 ">{title}</a>
                <div class="flex ">
                    <span class="border-[1px] border-white/30 flex items-center w-8 h-[1px] mt-[6px] mr-2 "></span>
                    <span class="text-[10px] text-white/40 mb-1 inter-200 ">February 2023</span>
                    <span class="border-[1px] border-white/30 flex items-center w-8 h-[1px] mt-[6px] ml-2 "></span>
                </div>   
            </section>
            <p class="text-[10px] text-white/50 whitespace-normal inter-300">{paragraph}</p>
        </section>
    </section>

    <section class=" border-b border-white/30 p-[2px] ">
        <img src={ground_img} alt="" class=`${ground_height} `>
    </section>
    <section class="flex justify-between items-center p-[10px] ">
        <span class="flex gap-2">
            <img src={icon_span_one} alt="" class="h-[18px]">
            <img src={icon_span_two} alt="" class="h-[18px]">
            <img src={icon_span_three} alt="" class="h-[18px]">
        </span>
        <span class="flex items-center gap-2 text-[13px] inter-200 text-white/60 ">
            <p>visit</p>
            <a href={link}><img src={link_img} alt="" class="h-[14px] "></a>
        </span>
    </section>
</section> 
