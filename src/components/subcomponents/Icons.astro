---
interface Props{
link?: string
img?: string
height?: string
height_md?: string
height_lg?: string
shadow?: string
}
const {link,img,height, height_md, height_lg} = Astro.props
---

    <span class="flex text-[16px] gap-5 items-center">
        <a href={link} class="flex flex-col dropdown_social_hover items-center ">
            <img src={img} alt="" class=`${height} ${height_md} ${height_lg} hover:drop-shadow-[0_0_6px_rgb(255,255,255)]`>
        </a>
    </span>